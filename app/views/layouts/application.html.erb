<!DOCTYPE html>
<html>
  <head>
    <title>BadBoats.io</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="nav">

      <div class="nav_left">
        <a href="/" class="nav__dashboard nav__links">
          Dashboard
        </a>

        <a href="/jobs" class="nav__jobs nav__links">
          All jobs
        </a>
      </div>

      <div class="nav_right">
        <a href="/sessions/edit" class="nav__edit nav__links">
          Account
        </a>

        <form action='/users/sign_out' method='DELETE' class="nav__form_logout">
          <input type="submit" value="Logout" class="nav__form_logout__btn nav__links">
        </form>
      </div>

    </div>

    <div class="spacer"></div>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <div class="main">
      <%= yield %>
    </div>

  </body>
</html>
